<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="#FFFFFF">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="Nueva Contraseña"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Crea una contraseña segura que no hayas usado antes."
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:textAlignment="center" />


    <View
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nueva contraseña"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:padding="4dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:src="@android:drawable/ic_lock_idle_lock"
            app:tint="#666666" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:hint="Mínimo 8 caracteres"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:textColorHint="#999999"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/iv_show_password1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@android:drawable/ic_menu_view"
            app:tint="#666666"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar contraseña"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:padding="4dp"
        android:layout_marginBottom="40dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:src="@android:drawable/ic_lock_lock"
            app:tint="#666666" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:hint="Repite tu contraseña"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:textColorHint="#999999"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/iv_show_password2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@android:drawable/ic_menu_view"
            app:tint="#666666"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_update_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="ACTUALIZAR CONTRASEÑA"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#2196F3"
        android:textColor="#FFFFFF" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Requisitos de seguridad:"
        android:textColor="#666666"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="• Mínimo 8 caracteres\n• Al menos una mayúscula\n• Al menos un número\n• Al menos un carácter especial"
        android:textColor="#666666"
        android:textSize="12sp" />

</LinearLayout>